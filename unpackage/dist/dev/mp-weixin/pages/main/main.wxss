.home {
  width: 750rpx;
  background-color: #fff;
}
.home swiper {
  margin: 0 auto;
  margin-top: 20rpx;
  width: 700rpx;
  height: 380rpx;
}
.home swiper image {
  height: 100%;
  width: 100%;
  border-radius: 20rpx;
}
.home .nav {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 0 auto;
  margin-top: 20rpx;
  width: 730rpx;
  border-radius: 30rpx;
  background-color: #fff;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.home .nav .nav_item {
  width: 20%;
  text-align: center;
}
.home .nav .nav_item image {
  width: 90rpx;
  height: 90rpx;
  color: #fff;
}
.home .nav .nav_item text {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
}
.home .contentBox {
  width: 690rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  border-radius: 30rpx;
  background: #fff;
  padding: 0 20rpx 20rpx 20rpx;
}
.home .contentBox .content_title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
  height: 60rpx;
  border-bottom: 2rpx solid #C0C0C0;
}
.home .contentBox .content_title image {
  width: 40rpx;
  height: 50rpx;
}
.home .contentBox .content_title .content_title_text {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 90%;
  height: 60rpx;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.home .contentBox .content_title .content_title_text text {
  font-size: 28rpx;
  font-weight: 600;
  line-height: 60rpx;
  margin-left: 8rpx;
}
.home .contentBox .content_title .content_title_text text:nth-child(2) {
  font-size: 26rpx;
  line-height: 60rpx;
}
.home .contentBox .content_item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
  height: 220rpx;
  border-bottom: 1px solid #eee;
}
.home .contentBox .content_item image {
  width: 45%;
  height: 65%;
  border-radius: 20rpx;
  margin-left: -15rpx;
}
.home .contentBox .content_item .content_text {
  width: 55%;
  height: 65%;
}
.home .contentBox .content_item .content_text view {
  font-size: 28rpx;
  font-weight: 600;
  margin-left: 30rpx;
  margin-bottom: 40rpx;
}
.home .contentBox .content_item .content_text .content_ititle {
  width: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.home .contentBox .content_item .content_text view:nth-child(2) {
  font-size: 25rpx;
  color: #666666;
}
.home .contentBox .content_item .content_text view:nth-child(2) text:nth-child(1) {
  margin-right: 50rpx;
}

