.home .content {
  width: 750rpx;
  padding: 0;
  margin-top: 10rpx;
  background-color: #fff;
}
.home .content view {
  width: 690rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}
.home .content view:nth-child(1) {
  font-size: 35rpx;
  font-weight: 600;
}
.home .content view:nth-child(3) {
  padding-bottom: 20rpx;
}
.home .comment {
  width: 750rpx;
  margin-top: 10rpx;
  background-color: #fff;
}
.home .comment .comment_top {
  width: 100%;
  height: 60rpx;
  border-bottom: 2rpx solid #C0C0C0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 28rpx;
}
.home .comment .comment_top image {
  width: 20rpx;
  height: 50rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.home .comment .comment_top .comment_top_text {
  margin-left: 370rpx;
  color: #DD514C;
}
.home .comment .comment_item {
  width: 750rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background-color: #fff;
  border-bottom: 2rpx solid #C0C0C0;
  padding-bottom: 20rpx;
}
.home .comment .comment_item .avatar {
  width: 68rpx;
  height: 68rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.home .comment .comment_item .avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.home .comment .comment_item .content {
  margin-top: 20rpx;
  width: 500rpx;
}
.home .comment .comment_item .content .content_user {
  font-size: 30rpx;
  font-weight: 500;
  color: #C0C0C0;
  margin-top: 0;
}
.home .comment .comment_item .content .content_img {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.home .comment .comment_item .content .content_img image {
  width: 157rpx;
  height: 157rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.home .comment .comment_item .content .content_time {
  font-size: 28rpx;
  margin-top: 0;
  color: #C0C0C0;
}

