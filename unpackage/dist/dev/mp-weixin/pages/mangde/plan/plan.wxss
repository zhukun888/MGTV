.home {
  width: 750rpx;
}
.home swiper {
  margin: 0 auto;
  margin-top: 20rpx;
  width: 700rpx;
  height: 380rpx;
}
.home swiper image {
  height: 100%;
  width: 100%;
  border-radius: 30rpx;
}
.home .content {
  width: 660rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  background-color: #FFFFFF;
  border-radius: 30rpx;
}
.home .content .selectBox {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 60rpx;
  border-bottom: 1px solid #eee;
}
.home .content .selectBox view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 28rpx;
  width: 50%;
  text-align: center;
  color: #666666;
}
.home .content .selectBox view image {
  margin-left: 9rpx;
  width: 25rpx;
  height: 25rpx;
}
.home .content .hide {
  margin-top: 60rpx;
  display: none;
  position: absolute;
  width: 660rpx;
  background-color: #fff;
  z-index: 999;
  box-shadow: darkgrey 3rpx 3rpx 3rpx 3rpx;
}
.home .content .hide view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 0 30rpx 0 30rpx;
  height: 60rpx;
  border-bottom: 2rpx solid #C0C0C0;
  font-size: 28rpx;
  line-height: 60rpx;
}
.home .content .content_item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
  height: 320rpx;
  border-bottom: 1px solid #eee;
}
.home .content .content_item image {
  width: 30%;
  height: 100%;
}
.home .content .content_item .content_text {
  width: 70%;
  height: 80%;
}
.home .content .content_item .content_text .content_tit {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.home .content .content_item .content_text .content_info {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.home .content .content_item .content_text .content_info_year {
  margin-top: 30rpx;
}
.home .content .content_item .content_text .content_info_detail {
  margin-top: 30rpx;
}
.home .content .content_item .content_text view {
  font-size: 25rpx;
  margin-left: 30rpx;
  margin-bottom: 10rpx;
}
.home .content .content_item .content_text view:nth-child(4) {
  color: #fff;
  width: 120rpx;
  height: 40rpx;
  font-size: 22rpx;
  font-weight: 400;
  line-height: 40rpx;
  text-align: center;
  background: #dd514c;
  border-radius: 20rpx;
}

