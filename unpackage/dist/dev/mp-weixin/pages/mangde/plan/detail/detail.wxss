.home .head {
  width: 750rpx;
  height: 400rpx;
  border-bottom-right-radius: 60%;
  border-bottom-left-radius: 60%;
  border-bottom: 2rpx solid #C8C7CC;
  background-color: #fff;
  padding-top: 30rpx;
}
.home .head image {
  display: block;
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto;
  border-radius: 50%;
}
.home .head text {
  display: block;
  width: 400rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  margin: 0 auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.home .intro {
  width: 700rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  border-radius: 30rpx;
  background: #fff;
  padding-bottom: 20rpx;
}
.home .intro .intro_title {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
  height: 60rpx;
  border-bottom: 2rpx solid #C8C7CC;
}
.home .intro .intro_title image {
  width: 10rpx;
  height: 50rpx;
  margin-left: 28rpx;
}
.home .intro .intro_title text {
  font-size: 28rpx;
  line-height: 60rpx;
  margin-left: 20rpx;
}
.home .intro text {
  font-size: 26rpx;
}
.home .bottomBox {
  height: 100rpx;
}
.home .bottomBox .bottom {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 100rpx;
  background: #fff;
}
.home .bottomBox .bottom image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 50rpx;
}
.home .bottomBox .bottom view {
  color: #fff;
  width: 300rpx;
  height: 60rpx;
  background-color: #dd514c;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

